<!DOCTYPE html>
<html>
    <head>
        <title>Stroll Trek Run - Walking for Everybody</title>
        <link rel='stylesheet' href='../stylesheets/all.css'>
        <link rel="stylesheet" href="testhttps://use.fontawesome.com/releases/v5.1.1/css/all.css" integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ" crossorigin="anonymous">
        <link rel='stylesheet' href='../stylesheets/style.css'>
    </head>
    <body>
    <div class='partialWrapper header'>
        <nav>
            <a class="logo" href="/">Stroll Trek Run</a>
            <ul>
                <li><a href="/trails">View Trails</a></li>
                <% if(!currentUser){ %>
                    <li><a href="/login">Log In</a></li>
                    <li><a href="/register">Sign Up</a></li>
                <% } else { %>
                        <li><a href="/trails/new">Add Trail</a></li>
                        <li><a href="/logout">Logout</a></li>
                        <li><Hi <%=currentUser.username %></li>
                <% } %>
            </ul>
        </nav>
    </div>
        <% if(error && error.length > 0){ %>
            <div class="alert-error"> <%= error %> </div>
        <% } else if (success && success.length > 0){ %>
            <div class="alert-success"> <%= success %> </div>
        <% } %>